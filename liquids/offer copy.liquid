<style>
  @import url("https://fonts.googleapis.com/css2?family=Koulen:wght@400&family=Inter:wght@400;500;600;700&display=swap");

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Import Google Fonts */

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
  min-height: 100vh;
  background-image: url("/elenis-pattern.png");
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  background-color: white; /* Fallback color if image fails to load */
}

a {
  color: inherit;
  text-decoration: none;
}

@media (prefers-color-scheme: dark) {
  html {
    color-scheme: light;
  }
}

/* Alternative approach for better pattern coverage */
@media (max-width: 767px) {
  html,
  body {
    background-size: 150% auto;
    background-position: center top;
  }
}

@media (min-width: 768px) and (max-width: 1199px) {
  html,
  body {
    background-size: 120% auto;
    background-position: center center;
  }
}

@media (min-width: 1200px) {
  html,
  body {
    background-size: cover;
    background-position: center center;
  }
}

.font-koulen {
  font-family: 'Koulen', cursive !important;
  font-weight: 400 !important;
}

/* Typography Classes - Reusable Font Styles */

/* Picture Perfect Heading Font */
.font-picture-perfect {
  font-family: 'Koulen', cursive !important;
  font-weight: 400px !important;
  font-size: 52px;
  line-height: 48px;
  letter-spacing: 0%;
}


/* Body Text Font */
.font-body-text {
  font-family: "Inter", sans-serif;
  font-weight: 500;
  font-size: 16px;
  line-height: 20px;
  letter-spacing: 0%;
}

/* Additional Inter font variations for reuse */
.font-inter-regular {
  font-family: "Inter", sans-serif;
  font-weight: 400;
}

.font-inter-medium {
  font-family: "Inter", sans-serif;
  font-weight: 500;
}

.font-inter-semibold {
  font-family: "Inter", sans-serif;
  font-weight: 600;
}

.font-inter-bold {
  font-family: "Inter", sans-serif;
  font-weight: 700;
}

/* Responsive adjustments for Picture Perfect heading */
@media (max-width: 768px) {
  .font-picture-perfect {
    font-size: 36px;
    line-height: 34px;
  }
}

@media (max-width: 480px) {
  .font-picture-perfect {
    /* font-size: 28px; */
    /* line-height: 26px; */
  }
}

  .offers-page {
  min-height: 100vh;
  background-color: #f8f9fa;
}

.offers-content {
  background-color: #f8f9fa;
  padding: 32px 0;
}

.offers-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 16px;
}

.offers-title {
  font-size: 36px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 32px;
  color: #1f2937;
}

.offers-subtitle {
  text-align: center;
  color: #6b7280;
  margin-bottom: 48px;
}

.offers-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32px;
}

@media (min-width: 768px) {
  .offers-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .offers-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

.offer-card {
  background-color: white;
  border-radius: 8px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  padding: 24px;
}

.offer-title {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 16px;
  color: #d81b60;
}

.offer-description {
  color: #6b7280;
  margin-bottom: 16px;
}

.offer-button {
  background-color: #d81b60;
  color: white;
  padding: 8px 24px;
  border-radius: 9999px;
  border: none;
  cursor: pointer;
  transition: background-color 0.2s;
}

.offer-button:hover {
  background-color: #c2185b;
}

  .picture-perfect-section {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: white;
  }
  
  @media (min-width: 768px) {
    .picture-perfect-section {
        gap:20px;
    }
  }
  
  .container {
    max-width: 1440px;
    padding: 20px 20px;
  }

  @media (max-width: 767px) {
    .container {
        padding: 0px 0px;
      }
  }
  
  /* Desktop Layout */
  .desktop-layout {
    display: none;
  }
  
  @media (min-width: 1024px) {
    .desktop-layout {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 47px;
      align-items: center;
    }
  }

  @media (min-width: 768px) {
    .desktop-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        align-items: center;
      }
  }
  
  .product-image-wrapper {
    aspect-ratio: 1;
    border-radius: 16px;
    overflow: hidden;
    background-color: #f3f4f6;
    position: relative;
  }

  video {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .content-section {
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 40px;
  }
  
  .heading-section {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .content-section {
        gap: 20px;
    }
    .heading-section {
        gap: 20px;
    }
    
  }
  
  .main-heading {
    color: #111827;
  }
  
  .heading-highlight {
    color: #ec4899;
  }
  
  .price-section {
    margin-bottom: 32px;
  }
  
  .price {
    color: #2563eb;
    font-weight: bold;
    font-size: 32px;
  }
  
  .description-text {
    color: #374151;
    line-height: 1.6;
  }
  
  .features-container {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    justify-content: center;

    gap: 12px;
  }
  
  .feature-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background-color: #f9a8d4;
  }
  
  .feature-text {
    color: #ec4899;
    text-align: center;
  }
  
  /* Mobile Layout */
  .mobile-layout {
    display: block;
  }
  
  @media (min-width: 768px) {
    .mobile-layout {
      display: none;
    }
  }
  
  .mobile-content {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  
  .mobile-image-container {
    position: relative;
  }
  
  .mobile-image-wrapper {
    width: 100%;
    aspect-ratio: 1;
    border-bottom-left-radius: 32px;
    border-bottom-right-radius: 32px;
    overflow: hidden;
    background-color: #f3f4f6;
    margin: 0 auto;
    position: relative;
  }
  
  .mobile-content-section {
    display: flex;
    flex-direction: column;
    gap: 32px;
    padding: 0px 16px 40px 16px;
  }
  
  .mobile-heading-section {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }
  
  .mobile-features-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    align-items: center;
    justify-content: center;
  }
  
  .mobile-description {
    max-width: 480px;
    margin: 0 auto;
    line-height: 1.6;
  }
  
  /* Responsive adjustments for mobile */
  @media (max-width: 768px) {
    .picture-perfect-section {
      padding: 0px 0;
    }

    .main-heading {
        display: flex;
        flex-direction: column;
        color: white;
      }
  
    .mobile-content {
      gap: 32px;
    }
  
    .price {
      font-size: 28px;
    }
  
  }
  
  @media (max-width: 480px) {
  
    .mobile-image-wrapper {
      max-width: 100%;
    }
  
    .price {
      font-size: 24px;
    }
  
    .content-section {
      gap: 24px;
    }
  
    .mobile-content {
      gap: 28px;
    }
  }
  
</style>
<section class="picture-perfect-section">
  <div class="container">
    <!-- Desktop Layout -->
    <div class="desktop-layout">
      <!-- Product Image -->
      <div class="product-image-container">
        <div class="product-image-wrapper">
          <video controls autoplay loop muted>
            <source src="https://cdn.shopify.com/videos/c/o/v/f9199132523a47699f2d7e0db7aabf88.mp4" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      </div>

      <!-- Content -->
      <div class="content-section">
        <div class="heading-section">
          <h2 class="font-picture-perfect main-heading">
            PICTURE PERFECT MOMENTS,
            <span class="heading-highlight">DELICIOUSLY CUSTOMIZED.</span>
          </h2>
          <p class="font-body-text description-text">
            Upload your favorite photo and transform them into delicious,
            conversation-worthy treats that look as amazing as they taste.
            Our custom photo cookies bring your celebrations to life one
            sweet bite at a time.
          </p>
        </div>

        <!-- Features -->
        <div class="features-container">
          {% assign features = "Freshly baked,Nut free recipe,Nut free recipe" | split: ',' %}
          {% for feature in features %}
            <div class="feature-item">
              <div style="display: flex; align-items: center; justify-content: center;">
                <img src="{{ 'hero-simple-icon.png' | asset_url }}" alt="Feature icon" width="30" height="30">
              </div>
              <span class="font-body-text feature-text">{{ feature }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="mobile-layout">
      <div class="mobile-content">
        <!-- Product Image -->
        <div class="mobile-image-container">
          <div class="mobile-image-wrapper">
            <video controls autoplay loop muted>
              <source src="https://cdn.shopify.com/videos/c/o/v/f9199132523a47699f2d7e0db7aabf88.mp4" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
          <div class="mobile-heading-section">
            <h2 class="font-picture-perfect main-heading">
              PICTURE PERFECT MOMENTS,
              <span class="heading-highlight">DELICIOUSLY CUSTOMIZED.</span>
            </h2>
          </div>
        </div>

        <!-- Content -->
        <div class="mobile-content-section">
          <!-- Features -->
          <div class="mobile-features-container">
            {% for feature in features %}
              <div class="feature-item">
                <div style="display: flex; align-items: center; justify-content: center;">
                    <img src="{{ 'hero-simple-icon.png' | asset_url }}" alt="Feature icon" width="30" height="30">
                </div>
                <span class="font-body-text feature-text">{{ feature }}</span>
              </div>
            {% endfor %}
          </div>
          <p class="font-body-text description-text mobile-description">
            Lorem ipsum dolor sit amet consectetur. Sed tristique neque
            mauris incididunt non diam tellus. Pellentesque lectus massa ac
            felis duis. Varius eleifend sit ullamcorper est gravida.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Picture Perfect Section",
  "tag": "section",
  "class": "shopify-section",
  "settings": [],
  "presets": [
    {
      "name": "Picture Perfect Section"
    }
  ]
}
{% endschema %}
