{% style %}
  .promotional-banner {
    background-color: {{ section.settings.background_color }};
    border-top: 3px solid {{ section.settings.border_color }};
    border-bottom: 3px solid {{ section.settings.border_color }};
    padding: 20px 0;
    height: 120px;
    overflow: hidden;
    white-space: nowrap;
    display: flex;
    align-items: center;
  }

  .banner-scroll-container {
    display: flex;
    align-items: center;
    animation: scroll-left 80s linear infinite;
    gap: 60px;
    height: 100%;
    min-width: 200%;
  }

  .banner-item {
    display: flex;
    align-items: center;
    gap: 40px;
    flex-shrink: 0;
    height: 100%;
  }

  .banner-text {
    font-family: "Inter", sans-serif;
    font-weight: 800;
    font-size: 22px;
    color: {{ section.settings.text_color }};
    text-transform: uppercase;
    letter-spacing: 1.5px;
    white-space: nowrap;
    display: flex;
    align-items: center;
    height: 100%;
  }

  .banner-icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .banner-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .banner-separator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ section.settings.separator_color }};
    flex-shrink: 0;
    display: flex;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .promotional-banner:hover .banner-scroll-container {
    animation-play-state: paused;
  }

  @media (max-width: 768px) {
    .promotional-banner {
      height: 100px;
      padding: 16px 0;
    }

    .banner-text {
      font-size: 18px;
      font-weight: 700;
      letter-spacing: 1.2px;
    }

    .banner-icon {
      width: 30px;
      height: 30px;
    }

    .banner-separator {
      width: 6px;
      height: 6px;
    }

    .banner-item {
      gap: 35px;
    }

    .banner-scroll-container {
      gap: 50px;
      animation: scroll-left 60s linear infinite;
    }
  }

  @media (max-width: 480px) {
    .promotional-banner {
      height: 80px;
      padding: 12px 0;
    }

    .banner-text {
      font-size: 16px;
      font-weight: 700;
      letter-spacing: 1px;
    }

    .banner-icon {
      width: 24px;
      height: 24px;
    }

    .banner-separator {
      width: 4px;
      height: 4px;
    }

    .banner-item {
      gap: 30px;
    }

    .banner-scroll-container {
      gap: 40px;
      animation: scroll-left 50s linear infinite;
    }
  }
{% endstyle %}

