  text-decoration: none;
}

@media (prefers-color-scheme: dark) {
  html {
    color-scheme: light;
  }
}

/* Alternative approach for better pattern coverage */
@media (max-width: 767px) {
  html,
  body {
    background-size: 150% auto;
    background-position: center top;
  }
}

