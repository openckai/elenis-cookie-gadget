<section class="picture-perfect-section">
  <div class="container">
    <!-- Desktop Layout -->
    <div class="desktop-layout">
      <!-- Product Image -->
      <div class="product-image-container">
        <div class="product-image-wrapper">
          {% if section.settings.media_type == 'video' %}
            {% if section.settings.video != blank %}
              <div class="video-container" style="width: 100%; height: 100%; position: relative;">
                <video 
                  id="video-{{ section.id }}"
                  autoplay 
                  loop 
                  muted 
                  playsinline
                  preload="metadata"
                  defaultmuted 
                  class="video-player"
                  style="width: 100%; height: 100%; object-fit: cover;"
                >
                  <source src="{{ section.settings.video.sources[1].url }}" type="video/mp4">
                </video>
              </div>
              <script>
                document.getElementById('video-{{ section.id }}').play().catch(function(error) {
                  console.log("Video play failed", error);
                });
              </script>
            {% elsif section.settings.video_url != blank %}
              <div class="video-container" style="width: 100%; height: 100%; position: relative;">
                {{ section.settings.video_url | video_tag: class: 'video-player', autoplay: true, loop: true, muted: true, controls: false, playsinline: true }}
              </div>
            {% endif %}
          {% else %}
            {% if section.settings.image %}
              <img 
                src="{{ section.settings.image | img_url: '1500x' }}"
                srcset="
                  {{ section.settings.image | img_url: '400x' }} 400w,
                  {{ section.settings.image | img_url: '600x' }} 600w,
                  {{ section.settings.image | img_url: '800x' }} 800w,
                  {{ section.settings.image | img_url: '1000x' }} 1000w,
                  {{ section.settings.image | img_url: '1500x' }} 1500w
                "
